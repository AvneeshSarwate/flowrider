{
  "name": "flowrider",
  "displayName": "flowRider",
  "description": "A tool for viewing logical flows thrugh a codebase",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:flowrider.flowsView",
    "onCommand:flowrider.refreshFlows",
    "onCommand:flowrider.hydrateFlow",
    "onCommand:flowrider.clearHydration",
    "onCommand:flowrider.writeFlowToDb",
    "onCommand:flowrider.hydrateFlowByName"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "flowrider",
          "title": "Flow Rider",
          "icon": "media/flowrider-icon.svg"
        }
      ]
    },
    "configuration": {
      "title": "FlowRider",
      "properties": {
        "flowrider.tag": {
          "type": "string",
          "default": "#@#@#@",
          "description": "Tag used to identify flow comments"
        },
        "flowrider.debounceMs": {
          "type": "number",
          "default": 500,
          "minimum": 0,
          "description": "Delay (ms) to debounce workspace rescans after saves"
        },
        "flowrider.dbPath": {
          "type": "string",
          "default": ".codeflows/flows.jsonc",
          "description": "Relative path to the local flow database file"
        },
        "flowrider.contextLines": {
          "type": "number",
          "default": 3,
          "minimum": 0,
          "description": "Number of context lines to capture before/after a flow comment"
        },
        "flowrider.globalDbPath": {
          "type": "string",
          "default": "",
          "description": "Optional path to a global flow database (future use)"
        }
      }
    },
    "views": {
      "flowrider": [
        {
          "type": "webview",
          "id": "flowrider.flowsView",
          "name": "Flows"
        }
      ]
    },
    "commands": [
      {
        "command": "flowrider.refreshFlows",
        "title": "FlowRider: Refresh Flows"
      },
      {
        "command": "flowrider.hydrateFlow",
        "title": "FlowRider: Hydrate Flow"
      },
      {
        "command": "flowrider.clearHydration",
        "title": "FlowRider: Clear Hydration Decorations"
      },
      {
        "command": "flowrider.writeFlowToDb",
        "title": "FlowRider: Write Flow To DB (single flow)"
      },
      {
        "command": "flowrider.hydrateFlowByName",
        "title": "FlowRider: Hydrate Flow By Name"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "build:webview": "cd webview-ui && npm run build",
    "vscode:prepublish": "npm run build:webview && npm run compile",
    "build": "npm run build:webview && npm run compile"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/string-similarity": "^4.0.2",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^9.39.1",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "diff": "^8.0.2",
    "jsonc-parser": "^3.3.1",
    "string-similarity": "^4.0.4",
    "typescript": "^5.9.3"
  }
}
