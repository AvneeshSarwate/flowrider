{
  "name": "flowrider",
  "displayName": "flowRider",
  "description": "A tool for viewing logical flows thrugh a codebase",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:flowrider.flowsView",
    "onCommand:flowrider.refreshFlows"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "flowrider",
          "title": "Flow Rider",
          "icon": "media/flowrider-icon.svg"
        }
      ]
    },
    "configuration": {
      "title": "FlowRider",
      "properties": {
        "flowrider.tag": {
          "type": "string",
          "default": "#@#@#@",
          "description": "Tag used to identify flow comments"
        },
        "flowrider.debounceMs": {
          "type": "number",
          "default": 500,
          "minimum": 0,
          "description": "Delay (ms) to debounce workspace rescans after saves"
        }
      }
    },
    "views": {
      "flowrider": [
        {
          "type": "webview",
          "id": "flowrider.flowsView",
          "name": "Flows"
        }
      ]
    },
    "commands": [
      {
        "command": "flowrider.refreshFlows",
        "title": "FlowRider: Refresh Flows"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "build:webview": "cd webview-ui && npm run build",
    "vscode:prepublish": "npm run build:webview && npm run compile",
    "build": "npm run build:webview && npm run compile"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
