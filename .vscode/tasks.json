{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build:webview",
			"type": "npm",
			"script": "build:webview",
			"problemMatcher": [],
			"presentation": {
				"reveal": "silent"
			}
		},
		{
			"label": "dev:webview",
			"type": "npm",
			"script": "dev",
			"path": "webview-ui",
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": "^$"
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "VITE",
					"endsPattern": "ready in"
				}
			},
			"presentation": {
				"reveal": "silent"
			}
		},
		{
			"label": "watch:extension",
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never"
			}
		},
		{
			"label": "build-all",
			"dependsOn": ["build:webview", "watch:extension"],
			"dependsOrder": "sequence",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "dev-all",
			"dependsOn": ["dev:webview", "watch:extension"],
			"dependsOrder": "parallel",
			"group": "build"
		}
	]
}
